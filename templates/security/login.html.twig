{% extends 'base.html.twig' %}

{% block title %}Connexion SnowTtricks{% endblock %}

{% block header %}
    <header class="sub_header">
        <div class="title">
            <div class="wrapper">
                <h1>{{ title }}</h1>
            </div>
        </div>
    </header>

{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.login'|trans }}</legend>
                        <div class="form-group">
                            <label for="email">Votre email</label>
                            <input type="email" id="email" name="email" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Votre mot de passe</label>
                            <input type="password" id="password" name="password" class="form-control" />
                        </div>
                        <input type="hidden" name="_target_path" value="{{ app.request.get('/') }}"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> connexion
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}